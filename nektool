#!/bin/bash

webdir="/var/www/nek.zone"
imgdir="img/art"
webpage="art/2021.html"

mogrify -path $filepath/$webdir/$1/thumbs -thumbnail '115x115^' -gravity center -extent 115x115x $2
mv $2 $filepath/$webdir/$1/
sed -i '/<!-- Gallery -->/a <a data-fancybox="gallery" href="/'$webdir'/'$1'/'$2'"><img src="/'$webdir'/'$1'/thumbs/'$2'"></a>' $filepath/$webpage
